<h1 ><%= @client["name"] %></h1>

<div class="mt-3 mb-2">
  <%= form_tag asaas_client_path(params[:id]), method: :get do |form| %>
    <span>
      Data inicial 
      <span class="ml-2"><%= date_field_tag :start_date, @date_range_filter.start_date %></span>
    </span>
    <span class="ml-3">
      Data final
      <span class="ml-2"><%= date_field_tag :end_date, @date_range_filter.end_date %></span>
    </span>

    <%= submit_tag "Filtrar", name: nil, class: "btn btn-primary ml-3" %>
  <% end %>
</div>

<div class="pt-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Cobran√ßa</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= link_to payment["description"], controller: "payments", action: "show", id: payment["id"]%></td>
          <td><%= button_to "Imprimir PDF", {target: "_blank", controller: "payments", action: "pdf", id: payment["id"]}, {class: "btn btn-primary btn-sm"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

